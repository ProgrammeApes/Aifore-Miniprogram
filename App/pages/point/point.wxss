/* pages/couponDetail/couponDetail.wxss */
.container{
  padding: 20rpx 38rpx 82rpx 38rpx;
  background-color: #F3F5F2;
}
.coupon-box{
  background-color: #fff;
  position: relative;
  width: 100%;
  height: 372rpx;
  border-radius: 14rpx;
  border-left: 0;
  padding-right: 160rpx;
  padding-left: 80rpx;
  padding-top: 48rpx;
  margin-bottom: 66rpx;
}
.coupon-box .left-bar{
  position: absolute;
  left: 0;
  top: 0;
  width: 32rpx;
  height: 100%;
  background: #9ccc65;
  overflow: hidden;
  border-radius: 14rpx 0 0 14rpx
}
.coupon-box .dot{
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  background: #F3F5F2;
  border-radius: 50%;
  top: 50%;
  margin-top: -13rpx;
  left: -13rpx;
}
.coupon-box .tag{
  position: absolute;
  width: 66rpx;
  right: 25rpx;
  top: 0rpx;
}
.coupon-box .tag>image{
  position: relative;
  width: 66rpx;
}
.coupon-box .tag .text{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 17rpx;
  text-align: center;
}
.coupon-box .tag .point{
  font-size: 44rpx;
}
.coupon-box .coupon-img{
  position: absolute;
  width: 143rpx;
  right: 16rpx;
  bottom: 20rpx;
}
.coupon-box .coupon-title{
  font-size: 40rpx;
  margin-bottom: 35rpx;
}
.coupon-box .price{
  font-size: 40rpx;
  color: #DD461D;
  font-weight: bold;
  margin-right: 13rpx;
}
.coupon-box .old-price{
  font-size: 26rpx;
  color: #535353;
  text-decoration:line-through;
}
.coupon-box .link-box{
  position: absolute;
  display:flex;
  width: 300rpx;
  justify-content: space-between;
  color: #9ccc65;
  font-size: 30rpx;
  bottom: 60rpx;
}
.coupon-box .link{

}
.bottom-bar{
  position: absolute;
  width:100%;
  left: 0;
  bottom: 0rpx;
  text-align: center;
  background: #FFFFFF;
  height: 100rpx;
  border-top: #535353 solid 1rpx;
  border-radius: 10rpx 10rpx 0 0 ;
  display: flex;
  line-height: 100rpx;
}
.bottom-bar .point-value{
  color: #9ccc65;
  font-size: 50rpx;
  font-weight: bold;
  line-height: 100rpx;
  position: absolute;
  left: 5%;
}
.bottom-bar text{
  font-size: 26rpx;
  color: #535353;
  line-height: 100rpx;
}

.avatar{
  width: 65rpx;
  height: 65rpx;
  border-radius: 50rpx;
  margin: 17rpx 0;
  position: absolute;
  right: 28%;
}
#point{
  position: absolute;
  left: 15%;
}
#user{
  position: absolute;
  right: 12%;
}
.arrow{
  width: 13rpx;
  margin:37rpx 20rpx;
  position: absolute;
  right: 5%;
}
