/* pages/vip/vip.wxss */
.card-box{
  position: relative;
  width: 90%;
  margin: 0 auto 50rpx auto;
}
.card-box>image{
  position: relative;
  width: 100%;
}
.card-box>.top-box {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  padding-top: 56rpx;
}
.card-box .top {
  padding-left: 19%;
  color: #373737;
}
.card-box .user-name{
  font-size: 30rpx;
  line-height: 1.2;
  margin-bottom: 10rpx;
}
.card-box .point{
  font-size: 24rpx;
  line-height: 1.2;
  justify-content: flex-start;
}
.card-box .point>.text{
  margin-right: 9rpx;
}
.card-box .down{
  position: absolute;
  padding-left: 6%;
  bottom: 45rpx;
  color: #373737;
  font-size: 26rpx;
}
.card-box .down .can-use-point{
  justify-content: flex-start;
  margin-right: 14rpx;
}
.card-box .down .can-use-point>view{
  margin-right: 10rpx;
}
.card-box .down .can-use-point>image{
  width: 10rpx;
}
.main-wrapper{
  justify-content: center;
  margin-bottom: 60rpx;
}
.main-wrapper .title{
  font-size: 30rpx;
  color: #494848;
}
.main-wrapper .text{
  text-align: center;
  font-size: 46rpx;
}
.main-wrapper .text>text{
  font-size: 29rpx;
}
.list-content{
  padding: 0 24rpx;
}
.list-content>view{
  height: 80rpx;
  border-bottom: 1rpx solid #d5d4d4;
  padding: 0 10rpx;
}
.list-content>view.has-top{
  border-top: 1rpx solid #d5d4d4;
}
.list-content .title{
  font-size: 28rpx;
  color: #494848;
}