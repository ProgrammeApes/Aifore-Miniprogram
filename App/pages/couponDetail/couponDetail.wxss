/* pages/couponDetail/couponDetail.wxss */
.container{
  padding: 20rpx 38rpx 82rpx 38rpx;
}
.coupon-box{
  position: relative;
  width: 100%;
  height: 372rpx;
  border-radius: 14rpx;
  border: 4rpx solid #f2f2f2;
  border-left: 0;
  padding-right: 160rpx;
  padding-left: 80rpx;
  padding-top: 48rpx;
  margin-bottom: 66rpx;
}
.coupon-box .left-bar{
  position: absolute;
  left: 0;
  top: 0;
  width: 32rpx;
  height: 100%;
  background: #9ccc65;
  overflow: hidden;
  border-radius: 14rpx 0 0 14rpx
}
.coupon-box .dot{
  position: absolute;
  width: 26rpx;
  height: 26rpx;
  background: #fff;
  border-radius: 50%;
  top: 50%;
  margin-top: -13rpx;
  left: -13rpx;
}
.coupon-box .tag{
  position: absolute;
  width: 66rpx;
  right: 25rpx;
  top: -12rpx;
}
.coupon-box .tag>image{
  position: relative;
  width: 66rpx;
}
.coupon-box .tag .text{
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
  color: #fff;
  font-size: 17rpx;
  text-align: center;
}
.coupon-box .tag .point{
  font-size: 44rpx;
}
.coupon-box .coupon-img{
  position: absolute;
  width: 143rpx;
  right: 16rpx;
  bottom: 20rpx;
}
.coupon-box .coupon-title{
  font-size: 40rpx;
  margin-bottom: 35rpx;
}
.coupon-box .price{
  font-size: 40rpx;
  color: #DD461D;
  font-weight: bold;
  margin-right: 13rpx;
}
.coupon-box .old-price{
  font-size: 26rpx;
  color: #535353;
  text-decoration:line-through;
}
.content-box>view{
  height: 158rpx;
  align-items: flex-start;
  font-size: 26rpx;
  justify-content: flex-start;
}
.content-box .title{
  width: 18%;
  margin-right: 12%;
  color: #868585;
}
.content-box .content{
  width: 70%;
}
.btn-use{
  position: absolute;
  width: 90%;
  left: 5%;
  bottom: 18rpx;
  text-align: center;
  color: #fff;
  background: #7cb342;
  height: 78rpx;
  line-height: 78rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}